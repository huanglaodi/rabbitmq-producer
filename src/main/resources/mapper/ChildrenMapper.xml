<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rabbitmqproducer.mapper.ChildrenMapper">
    <resultMap id="BaseResultMap" type="com.example.rabbitmqproducer.model.Children">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="score" jdbcType="INTEGER" property="score" />
    </resultMap>

    <select id="selectByName" resultType="com.example.rabbitmqproducer.model.Children" parameterType="string">
        select * from children_s where name= #{name}
    </select>

    <update id="updateById" >
        update children_s set name = #{children.name} where id=#{children.id}
    </update>

    <select id="selectById" resultType="com.example.rabbitmqproducer.model.Children" parameterType="string">
        select * from children_s where id= #{id}
    </select>

</mapper>